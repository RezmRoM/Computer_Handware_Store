<?xml version="1.0" encoding="UTF-8"?>
<Window x:Class="Computer_Hardware_Strore.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="White" 
            CornerRadius="20" 
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0"
                            Color="#20000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Grid Grid.Row="0" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Корзина"
                         FontSize="24"
                         FontWeight="SemiBold"
                         Foreground="#333333"/>

                <Button Grid.Column="1"
                        Content="✕"
                        Width="30"
                        Height="30"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Список товаров -->
            <ScrollViewer Grid.Row="1" 
                         Margin="20,0,20,20"
                         VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="CartItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="cartItemBorder"
                                    Background="White"
                                    CornerRadius="20"
                                    Margin="0,0,0,20"
                                    BorderThickness="1"
                                    BorderBrush="#EEEEEE">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" 
                                                    ShadowDepth="2"
                                                    Direction="270"
                                                    Color="#15000000"
                                                    Opacity="0.2"/>
                                </Border.Effect>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Border.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                    To="25" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                                    To="5" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                    To="0.3" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="Border.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                    To="15" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                                    To="2" Duration="0:0:0.2"/>
                                                <DoubleAnimation 
                                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                    To="0.2" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Изображение товара -->
                                    <Border Width="100" 
                                            Height="100"
                                            CornerRadius="15"
                                            ClipToBounds="True">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#f6f7f9" Offset="0"/>
                                                <GradientStop Color="#edf0f4" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid>
                                            <Image Source="{Binding UrlIzobrazheniya}"
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Effect>
                                                    <DropShadowEffect BlurRadius="20" 
                                                                    ShadowDepth="0"
                                                                    Color="#20000000"/>
                                                </Image.Effect>
                                            </Image>
                                            <!-- Градиентное наложение -->
                                            <Border CornerRadius="15">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#00000000" Offset="0.6"/>
                                                        <GradientStop Color="#15000000" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- Информация о товаре -->
                                    <StackPanel Grid.Column="1" 
                                              Margin="20,0">
                                        <TextBlock Text="{Binding Nazvanie}"
                                                 FontSize="18"
                                                 FontWeight="SemiBold"
                                                 Foreground="#1a1b1f"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,8"/>

                                        <Border Background="#f0f2f5" 
                                                CornerRadius="8" 
                                                Padding="10,5"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,8">
                                            <TextBlock Text="{Binding Kategoria}"
                                                     FontSize="13"
                                                     Foreground="#656d78"/>
                                        </Border>

                                        <TextBlock Text="{Binding Opisanie}"
                                                 FontSize="14"
                                                 Foreground="#656d78"
                                                 TextWrapping="Wrap"
                                                 MaxHeight="40"
                                                 TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Цена и количество -->
                                    <StackPanel Grid.Column="2" 
                                              Margin="20,0"
                                              MinWidth="120">
                                        <TextBlock Text="{Binding Tsena, StringFormat='{}{0:N0} ₽'}"
                                                 FontSize="20"
                                                 FontWeight="Bold"
                                                 Foreground="#FF3366"
                                                 Margin="0,0,0,15"/>

                                        <Border Background="#f8f9fa" 
                                                CornerRadius="12" 
                                                Padding="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Content="−"
                                                        Width="28"
                                                        Height="28"
                                                        Style="{StaticResource ProductButtonStyle}"
                                                        Click="DecrementQuantity_Click"
                                                        FontSize="16"/>

                                                <TextBlock Grid.Column="1"
                                                         Text="{Binding Quantity}"
                                                         FontSize="16"
                                                         FontWeight="SemiBold"
                                                         Foreground="#1a1b1f"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Margin="10,0"/>

                                                <Button Grid.Column="2"
                                                        Content="+"
                                                        Width="28"
                                                        Height="28"
                                                        Style="{StaticResource ProductButtonStyle}"
                                                        Click="IncrementQuantity_Click"
                                                        FontSize="16"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- Удалить -->
                                    <Button Grid.Column="3"
                                            Style="{StaticResource ProductButtonStyle}"
                                            Width="40"
                                            Height="40"
                                            Margin="20,0,0,0"
                                            Click="RemoveFromCart_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                                        Background="#fff1f3"
                                                        CornerRadius="12"
                                                        BorderThickness="0">
                                                    <TextBlock Text="×"
                                                             FontSize="24"
                                                             FontWeight="SemiBold"
                                                             Foreground="#FF3366"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                                    <Border.Triggers>
                                                        <EventTrigger RoutedEvent="Border.MouseEnter">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation 
                                                                        Storyboard.TargetProperty="Background.Color"
                                                                        To="#FF3366"
                                                                        Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="Border.MouseLeave">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation 
                                                                        Storyboard.TargetProperty="Background.Color"
                                                                        To="#fff1f3"
                                                                        Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Border.Triggers>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Итого и кнопка оформления заказа -->
            <Grid Grid.Row="2" 
                  Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Итого:"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Foreground="#333333"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} ₽'}"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="#FF3366"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Оформить заказ"
                        Width="200"
                        Height="50"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="PlaceOrder_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window> 