<Window x:Class="Computer_Hardware_Strore.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Hardware_Strore"
        mc:Ignorable="d"
        Title="Tech Store - Панель администратора" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Цвета -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#1E40AF"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#0F172A"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextColor" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="AccentColor" Color="#38BDF8"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF3366" Offset="0"/>
            <GradientStop Color="#2D3436" Offset="1"/>
        </LinearGradientBrush>

        <!-- Стили для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="1"
                                BorderBrush="#FF3366">
                            <ScrollViewer x:Name="PART_ContentHost" Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4477"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" 
                                                        ShadowDepth="0" 
                                                        Color="#FF3366"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="BorderBrush" Value="#FF3366"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                Background="{TemplateBinding Background}"
                                                Focusable="false"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <Path x:Name="Arrow" 
                                              Fill="#FF3366"
                                              Data="M0,0 L8,8 L16,0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"/>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                    Margin="10,3,30,3"
                                                    VerticalAlignment="Center"/>
                                    <Popup x:Name="Popup"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True" 
                                           Focusable="False"
                                           PopupAnimation="Slide">
                                        <Grid x:Name="DropDown"
                                              SnapsToDevicePixels="True"
                                              MinWidth="{TemplateBinding ActualWidth}"
                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border x:Name="DropDownBorder"
                                                    Background="White"
                                                    BorderBrush="#FF3366"
                                                    BorderThickness="1"
                                                    CornerRadius="0,0,10,10">
                                                <ScrollViewer Margin="0,4,0,4" SnapsToDevicePixels="True">
                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                </ScrollViewer>
                                            </Border>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4477"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180" CenterX="8" CenterY="4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Анимации -->
        <Storyboard x:Key="CardHover">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                            To="20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            To="1.02" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                            To="1.02" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="CardUnhover">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                            To="10" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                            To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Стили -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF3366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4477"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" 
                                                        ShadowDepth="0" 
                                                        Color="#FF3366"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2255"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Шаблон карточки товара -->
        <DataTemplate x:Key="ProductCardTemplate">
            <Border x:Name="cardBorder" 
                    Width="300" 
                    Height="570"
                    Background="{DynamicResource SurfaceColor}"
                    CornerRadius="15"
                    Margin="10"
                    BorderThickness="1"
                    BorderBrush="#444444">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0"
                                    Color="#FF3366"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard Storyboard="{StaticResource CardHover}"/>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard Storyboard="{StaticResource CardUnhover}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Изображение товара -->
                    <Border Grid.Row="0" 
                            Background="#FFF5F5F5"
                            CornerRadius="15,15,0,0">
                        <Image Source="{Binding UrlIzobrazheniya}"
                               Stretch="UniformToFill"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <!-- Информация о товаре -->
                    <StackPanel Grid.Row="1" Margin="15,10">
                        <TextBox Text="{Binding Nazvanie, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBox}"
                                Height="40"
                                FontSize="18"
                                FontWeight="SemiBold"
                                TextChanged="TextBox_TextChanged"
                                Margin="0,0,0,5"/>

                        <TextBox Text="{Binding Opisanie, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBox}"
                                Height="60"
                                FontSize="14"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                TextChanged="TextBox_TextChanged"
                                VerticalScrollBarVisibility="Auto"
                                Margin="0,0,0,5"/>
                    </StackPanel>

                    <!-- Категория -->
                    <StackPanel Grid.Row="2" Margin="15,0">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Категория: "
                                     Foreground="#666666"
                                     VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                    SelectedItem="{Binding Kategoria, UpdateSourceTrigger=PropertyChanged}"
                                    Width="200"
                                    SelectionChanged="CategoryComboBox_SelectionChanged"
                                    Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Цена и количество -->
                    <Grid Grid.Row="3" Margin="15,10,15,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Цена:"
                                     Foreground="#666666"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="-"
                                        Style="{StaticResource ModernButton}"
                                        Width="30"
                                        Height="30"
                                        PreviewMouseLeftButtonDown="DecrementPrice_PreviewMouseDown"
                                        PreviewMouseLeftButtonUp="Button_PreviewMouseUp"
                                        PreviewMouseRightButtonUp="Button_PreviewMouseUp"/>
                                <TextBox Text="{Binding Tsena, StringFormat='{}{0:N2}', UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Width="80"
                                         TextChanged="TextBox_TextChanged"
                                         Margin="5,0"/>
                                <Button Content="+"
                                        Style="{StaticResource ModernButton}"
                                        Width="30"
                                        Height="30"
                                        PreviewMouseLeftButtonDown="IncrementPrice_PreviewMouseDown"
                                        PreviewMouseLeftButtonUp="Button_PreviewMouseUp"
                                        PreviewMouseRightButtonUp="Button_PreviewMouseUp"/>
                            </StackPanel>

                            <TextBlock Text="Количество:"
                                     Foreground="#666666"
                                     Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="-"
                                        Style="{StaticResource ModernButton}"
                                        Width="30"
                                        Height="30"
                                        PreviewMouseLeftButtonDown="DecrementQuantity_PreviewMouseDown"
                                        PreviewMouseLeftButtonUp="Button_PreviewMouseUp"
                                        PreviewMouseRightButtonUp="Button_PreviewMouseUp"/>
                                <TextBox Text="{Binding KolichestvoTovarov, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Width="80"
                                         TextChanged="TextBox_TextChanged"
                                         Margin="5,0"/>
                                <Button Content="+"
                                        Style="{StaticResource ModernButton}"
                                        Width="30"
                                        Height="30"
                                        PreviewMouseLeftButtonDown="IncrementQuantity_PreviewMouseDown"
                                        PreviewMouseLeftButtonUp="Button_PreviewMouseUp"
                                        PreviewMouseRightButtonUp="Button_PreviewMouseUp"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Удалить"
                                Style="{StaticResource ModernButton}"
                                Width="100"
                                Height="35"
                                Margin="10,0,0,0"
                                Click="DeleteProduct_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон карточки категории -->
        <DataTemplate x:Key="CategoryCardTemplate">
            <Border Width="300"
                    Height="200"
                    Background="{DynamicResource SurfaceColor}"
                    CornerRadius="15"
                    Margin="10"
                    BorderThickness="1"
                    BorderBrush="#444444">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0"
                                    Color="#FF3366"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard Storyboard="{StaticResource CardHover}"/>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard Storyboard="{StaticResource CardUnhover}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок категории -->
                    <TextBlock Text="Категория"
                             Foreground="#666666"
                             FontSize="16"
                             Margin="15,15,15,5"
                             HorizontalAlignment="Left"/>

                    <!-- Название категории -->
                    <TextBox Grid.Row="1"
                            Text="{Binding Nazvanie, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernTextBox}"
                            Height="40"
                            FontSize="20"
                            FontWeight="SemiBold"
                            TextChanged="CategoryTextBox_TextChanged"
                            Margin="15,5,15,15"/>

                    <!-- Кнопки управления -->
                    <StackPanel Grid.Row="2"
                              Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              Margin="15,0,15,15">
                        <Button Content="Удалить"
                                Style="{StaticResource ModernButton}"
                                Width="100"
                                Height="35"
                                Click="DeleteCategory_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Шаблон карточки заказа -->
        <DataTemplate x:Key="OrderCardTemplate">
            <Border Width="350"
                    Height="250"
                    Background="{DynamicResource SurfaceColor}"
                    CornerRadius="15"
                    Margin="10"
                    BorderThickness="1"
                    BorderBrush="#444444">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0"
                                    Color="#FF3366"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard Storyboard="{StaticResource CardHover}"/>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard Storyboard="{StaticResource CardUnhover}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок и дата -->
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Status}"
                                 Foreground="{DynamicResource TextColor}"
                                 FontSize="20"
                                 FontWeight="SemiBold"/>

                        <TextBlock Grid.Column="1"
                                 Text="{Binding DataZakaza, StringFormat='dd.MM.yyyy HH:mm'}"
                                 Foreground="#666666"
                                 FontSize="14"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Информация о заказе -->
                    <StackPanel Grid.Row="1" Margin="15,0">
                        <TextBlock Text="Сумма заказа:"
                                 Foreground="#666666"
                                 FontSize="14"
                                 Margin="0,0,0,5"/>

                        <TextBlock Text="{Binding Summa, StringFormat='{}{0:N2} ₽'}"
                                 Foreground="{DynamicResource AccentColor}"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Margin="0,0,0,15"/>
                    </StackPanel>

                    <!-- Кнопки управления -->
                    <Button Grid.Row="2"
                            Content="Подробнее"
                            Style="{StaticResource ModernButton}"
                            Height="40"
                            Margin="15,0,15,15"
                            Click="ViewOrderDetails_Click"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Стили для TabControl -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="{DynamicResource SurfaceColor}" 
                                    CornerRadius="10" 
                                    Margin="0,0,0,10">
                                <TabPanel x:Name="HeaderPanel"
                                        Panel.ZIndex="1" 
                                        Margin="5,5,5,0"
                                        IsItemsHost="True"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="{DynamicResource SurfaceColor}"
                                    CornerRadius="10">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                ContentSource="SelectedContent"
                                                Margin="10"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TabItem -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Margin="5,0,0,0"
                                CornerRadius="5"
                                Background="Transparent">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border"
                                    Width="20"
                                    Height="20"
                                    CornerRadius="4"
                                    BorderThickness="2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    Background="{TemplateBinding Background}">
                                <Path x:Name="Checkmark"
                                      Width="10"
                                      Height="10"
                                      Data="M 0,4 L 3,8 L 8,0"
                                      Stroke="{DynamicResource TextColor}"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="Checkmark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundColor}" 
            CornerRadius="20" 
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок окна -->
            <Border Background="{DynamicResource HeaderGradient}"
                    Height="60"
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tech Store - Панель администратора"
                               Foreground="{DynamicResource TextColor}"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Margin="0,0,10,0">
                        <Button Style="{StaticResource ModernButton}"
                                Content="—"
                                Width="40"
                                Margin="5,0"
                                Click="MinimizeButton_Click"/>
                        <Button Style="{StaticResource ModernButton}"
                                Content="□"
                                Width="40"
                                Margin="5,0"
                                Click="MaximizeButton_Click"/>
                        <Button Style="{StaticResource ModernButton}"
                                Content="×"
                                Width="40"
                                Margin="5,0"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <TabControl Grid.Row="1"
                        x:Name="MainTabControl"
                        Style="{StaticResource ModernTabControl}"
                        Margin="10">
                <TabItem Header="Товары"
                         Style="{StaticResource ModernTabItem}">
                    <ScrollViewer>
                        <ItemsControl x:Name="ProductsItemsControl"
                                     ItemTemplate="{StaticResource ProductCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Категории"
                         Style="{StaticResource ModernTabItem}">
                    <ScrollViewer>
                        <ItemsControl x:Name="CategoriesListView"
                                     ItemTemplate="{StaticResource CategoryCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Заказы"
                         Style="{StaticResource ModernTabItem}">
                    <ScrollViewer>
                        <ItemsControl x:Name="OrdersListView"
                                     ItemTemplate="{StaticResource OrderCardTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Плавающая кнопка добавления -->
            <Button Grid.Row="1"
                    Style="{StaticResource ModernButton}"
                    Content="+"
                    FontSize="24"
                    Width="60"
                    Height="60"
                    Click="AddProduct_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="15"
                                     ShadowDepth="5"
                                     Color="#40000000"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Border>
</Window>
