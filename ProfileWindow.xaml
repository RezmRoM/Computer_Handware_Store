<?xml version="1.0" encoding="UTF-8"?>
<Window x:Class="Computer_Hardware_Strore.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                BorderBrush="#E4E4E4"
                                CornerRadius="12">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="2"
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3366"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3366"/>
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                BorderBrush="#E4E4E4"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="2"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3366"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3366"/>
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="20" 
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0"
                            Color="#20000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Grid Grid.Row="0" 
                  Height="200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Кнопка закрытия -->
                <Button Content="✕"
                        Width="30"
                        Height="30"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        Margin="20"/>

                <!-- Аватар и имя -->
                <StackPanel Grid.Row="1" 
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">
                    <Border Width="100" 
                            Height="100" 
                            CornerRadius="50"
                            Background="White"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                            ShadowDepth="0"
                                            Color="#30000000"/>
                        </Border.Effect>
                        <Grid>
                            <TextBlock Text="👤"
                                     FontSize="40"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                            <Image Source="{Binding AvatarUrl}"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Clip>
                                    <EllipseGeometry RadiusX="50" 
                                                    RadiusY="50" 
                                                    Center="50,50"/>
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>
                    <TextBlock Text="{Binding FullName}"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             TextAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Форма профиля -->
            <ScrollViewer Grid.Row="1" 
                         Margin="30,20"
                         VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- ФИО -->
                    <TextBlock Text="ФИО"
                             FontSize="14"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Email -->
                    <TextBlock Text="Email"
                             FontSize="14"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Телефон -->
                    <TextBlock Text="Телефон"
                             FontSize="14"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Адрес -->
                    <TextBlock Text="Адрес"
                             FontSize="14"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Смена пароля -->
                    <Border Background="#F8F9FA"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Смена пароля"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="#333333"
                                     Margin="0,0,0,15"/>

                            <!-- Текущий пароль -->
                            <TextBlock Text="Текущий пароль"
                                     FontSize="14"
                                     Foreground="#666666"
                                     Margin="0,0,0,8"/>
                            <PasswordBox x:Name="CurrentPasswordBox"
                                       Style="{StaticResource ModernPasswordBox}"
                                       Margin="0,0,0,15"/>

                            <!-- Новый пароль -->
                            <TextBlock Text="Новый пароль"
                                     FontSize="14"
                                     Foreground="#666666"
                                     Margin="0,0,0,8"/>
                            <PasswordBox x:Name="NewPasswordBox"
                                       Style="{StaticResource ModernPasswordBox}"
                                       Margin="0,0,0,15"/>

                            <!-- Подтверждение пароля -->
                            <TextBlock Text="Подтвердите пароль"
                                     FontSize="14"
                                     Foreground="#666666"
                                     Margin="0,0,0,8"/>
                            <PasswordBox x:Name="ConfirmPasswordBox"
                                       Style="{StaticResource ModernPasswordBox}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Кнопки -->
            <Grid Grid.Row="2" 
                  Margin="30,0,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Отмена"
                        Width="120"
                        Height="45"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="CancelButton_Click"
                        Background="#F8F9FA"
                        Foreground="#666666">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1"
                        Content="Сохранить"
                        Width="120"
                        Height="45"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="SaveButton_Click"
                        Margin="15,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window> 