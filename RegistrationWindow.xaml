<Window x:Class="Computer_Hardware_Strore.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Hardware_Strore"
        mc:Ignorable="d"
        Title="Регистрация - Компьютерный Магазин" 
        Height="750" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4477"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#FF1F1F1F" 
            CornerRadius="20" 
            BorderThickness="1" 
            BorderBrush="#FF3366">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с кнопками управления окном -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,5,0">
                    <Button x:Name="MinimizeButton" 
                            Content="🗕"
                            Click="MinimizeWindow"
                            Style="{StaticResource CustomButtonStyle}"
                            Width="30" 
                            Height="25"/>
                    <Button x:Name="MaximizeButton" 
                            Content="🗖"
                            Click="MaximizeWindow"
                            Style="{StaticResource CustomButtonStyle}"
                            Width="30" 
                            Height="25"
                            Margin="5,0"/>
                    <Button x:Name="CloseButton" 
                            Content="✕"
                            Click="CloseWindow"
                            Style="{StaticResource CustomButtonStyle}"
                            Width="30" 
                            Height="25"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="450"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть с изображением -->
                <Border Grid.Column="0">
                    <Image Source="/Images/tech_background.jpg" 
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Правая часть с формой регистрации -->
                <ScrollViewer Grid.Column="1" 
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="40"
                                VerticalAlignment="Center">
                        <TextBlock Text="Регистрация"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,40"/>

                        <TextBlock Text="ФИО"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="FullNameTextBox"
                                 Height="40"
                                 FontSize="16"
                                 Padding="10,5"
                                 Background="#FF2D2D2D"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="#FF3366"/>

                        <TextBlock Text="Email"
                                   Foreground="White"
                                   Margin="0,20,0,5"/>
                        <TextBox x:Name="EmailTextBox"
                                 Height="40"
                                 FontSize="16"
                                 Padding="10,5"
                                 Background="#FF2D2D2D"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="#FF3366"/>

                        <TextBlock Text="Пароль"
                                   Foreground="White"
                                   Margin="0,20,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="40"
                                     FontSize="16"
                                     Padding="10,5"
                                     Background="#FF2D2D2D"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="#FF3366"/>

                        <TextBlock Text="Подтверждение пароля"
                                   Foreground="White"
                                   Margin="0,20,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Height="40"
                                     FontSize="16"
                                     Padding="10,5"
                                     Background="#FF2D2D2D"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="#FF3366"/>

                        <TextBlock Text="Телефон"
                                   Foreground="White"
                                   Margin="0,20,0,5"/>
                        <TextBox x:Name="PhoneTextBox"
                                 Height="40"
                                 FontSize="16"
                                 Padding="10,5"
                                 Background="#FF2D2D2D"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="#FF3366"/>

                        <TextBlock Text="Адрес"
                                   Foreground="White"
                                   Margin="0,20,0,5"/>
                        <TextBox x:Name="AddressTextBox"
                                 Height="40"
                                 FontSize="16"
                                 Padding="10,5"
                                 Background="#FF2D2D2D"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="#FF3366"/>

                        <Button Content="Зарегистрироваться"
                                Style="{StaticResource CustomButtonStyle}"
                                Margin="0,40,0,0"
                                Height="45"
                                FontSize="16"
                                Click="RegisterButton_Click"/>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center">
                            <Hyperlink x:Name="LoginLink" 
                                       Foreground="#FF3366"
                                       TextDecorations="None"
                                       Click="LoginLink_Click">
                                Уже есть аккаунт? Войти
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
