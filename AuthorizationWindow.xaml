<?xml version="1.0" encoding="UTF-8"?>
<Window x:Class="Computer_Hardware_Strore.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Hardware_Strore"
        mc:Ignorable="d"
        Title="Авторизация - Компьютерный Магазин" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Цветовая схема -->
        <Color x:Key="PrimaryColor">#FF3366</Color>
        <Color x:Key="SecondaryColor">#2563EB</Color>
        <Color x:Key="BackgroundColor">#1A1A1A</Color>
        <Color x:Key="SurfaceColor">#2D2D2D</Color>
        <Color x:Key="TextColor">#FFFFFF</Color>
        <Color x:Key="AccentColor">#00FF9D</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                              To="{StaticResource SecondaryColor}"
                                              Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                              To="{StaticResource PrimaryColor}"
                                              Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="20" 
            BorderThickness="1" 
            BorderBrush="{StaticResource PrimaryBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с кнопками управления окном -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="DragWindow">
                <TextBlock Text="Компьютерный Магазин - Авторизация"
                           Foreground="{StaticResource TextBrush}"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,0,5,0">
                    <Button x:Name="MinimizeButton" 
                            Content="—"
                            Click="MinimizeWindow"
                            Style="{StaticResource ModernButton}"
                            Width="30" 
                            Height="25"/>
                    <Button x:Name="MaximizeButton" 
                            Content="□"
                            Click="MaximizeWindow"
                            Style="{StaticResource ModernButton}"
                            Width="30" 
                            Height="25"
                            Margin="5,0"/>
                    <Button x:Name="CloseButton" 
                            Content="✕"
                            Click="CloseWindow"
                            Style="{StaticResource ModernButton}"
                            Width="30" 
                            Height="25"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть с изображением и анимированным фоном -->
                <Grid Grid.Column="0">
                    <Image Source="/Images/tech_background.jpg" 
                           Stretch="UniformToFill">
                        <Image.Effect>
                            <BlurEffect Radius="5"/>
                        </Image.Effect>
                    </Image>

                    <!-- Анимированная сетка -->
                    <Canvas x:Name="AnimatedGrid" ClipToBounds="True">
                        <!-- Добавляется программно -->
                    </Canvas>
                </Grid>

                <!-- Правая часть с формой входа -->
                <Border Grid.Column="1" 
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="20,0,0,20"
                        Margin="0">
                    <StackPanel Margin="40"
                                VerticalAlignment="Center">
                        <TextBlock Text="Авторизация"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,40"/>

                        <TextBlock Text="Email"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox"
                                 Height="40"
                                 FontSize="16"
                                 Style="{StaticResource ModernTextBox}"/>

                        <TextBlock Text="Пароль"
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,20,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Height="40"
                                     FontSize="16"
                                     Style="{StaticResource ModernPasswordBox}"/>

                        <Button Content="Войти"
                                Style="{StaticResource ModernButton}"
                                Margin="0,40,0,0"
                                Height="45"
                                FontSize="16"
                                Click="LoginButton_Click"/>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center">
                            <Hyperlink x:Name="RegisterLink" 
                                       Foreground="{StaticResource PrimaryBrush}"
                                       TextDecorations="None"
                                       Click="RegisterLink_Click">
                                <TextBlock Text="Зарегистрироваться"
                                           FontSize="14"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
