<Window x:Class="Computer_Hardware_Strore.AddCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление категории" 
        Height="284" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="15" 
            Margin="10,10,0,10" HorizontalAlignment="Left" Width="390">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                            ShadowDepth="0"
                            Color="#2563EB"/>
        </Border.Effect>

        <Grid Margin="30,30,17,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Добавление новой категории"
                     FontSize="24"
                     FontWeight="SemiBold"
                     Foreground="{StaticResource TextBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock Text="Название категории:"
                         Foreground="{StaticResource TextBrush}"
                         Margin="0,0,0,5"/>
                <TextBox x:Name="CategoryNameTextBox"
                        Style="{StaticResource ModernTextBox}"
                        Height="40"
                        Margin="0,0,0,15"/>
            </StackPanel>

            <StackPanel Grid.Row="2" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0">
                <Button Content="Добавить"
                        Style="{StaticResource ModernButton}"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Click="AddButton_Click"/>
                <Button Content="Отмена"
                        Style="{StaticResource ModernButton}"
                        Width="120"
                        Height="40"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 