<?xml version="1.0" encoding="UTF-8"?>
<Window x:Class="Computer_Hardware_Strore.BuyerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Hardware_Strore"
        mc:Ignorable="d"
        Title="Tech Store - Каталог" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Цвета -->
        <Color x:Key="PrimaryColor">#FF3366</Color>
        <Color x:Key="SecondaryColor">#2D3436</Color>
        <Color x:Key="AccentColor">#4834D4</Color>
        <Color x:Key="BackgroundColor">#FFFFFF</Color>
        <Color x:Key="SurfaceColor">#F8F9FA</Color>
        <Color x:Key="TextPrimaryColor">#333333</Color>
        <Color x:Key="TextSecondaryColor">#666666</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- Градиенты -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF3366" Offset="0"/>
            <GradientStop Color="#2D3436" Offset="1"/>
        </LinearGradientBrush>

        <!-- Конвертеры -->
        <Style x:Key="ProductButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="22.5"
                                BorderThickness="0">
                            <Grid>
                                <ContentPresenter x:Name="contentPresenter"
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF4477"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF2255"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для поисковой строки -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="25">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Шаблон карточки товара -->
        <DataTemplate x:Key="ProductCardTemplate">
            <Border x:Name="cardBorder" 
                    Width="320" 
                    Height="520"
                    Background="White"
                    CornerRadius="25"
                    Margin="15"
                    BorderThickness="1"
                    BorderBrush="#FFE4E4E4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" 
                                    ShadowDepth="2"
                                    Direction="270"
                                    Color="#15000000"
                                    Opacity="0.2"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                    To="25" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                    To="5" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                    To="0.3" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                    To="-5" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                    To="15" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.ShadowDepth)"
                                    To="2" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                    To="0.2" Duration="0:0:0.2"/>
                                <DoubleAnimation 
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                                    To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Изображение товара -->
                    <Border Grid.Row="0" 
                            CornerRadius="25,25,0,0"
                            ClipToBounds="True">
                        <Grid>
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#f6f7f9" Offset="0"/>
                                        <GradientStop Color="#edf0f4" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Image Source="{Binding UrlIzobrazheniya}"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="20" 
                                                    ShadowDepth="0"
                                                    Color="#20000000"/>
                                </Image.Effect>
                            </Image>
                            <!-- Градиентное наложение -->
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="#90000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <!-- Цена -->
                            <Border VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                                    Background="#FFFFFF"
                                    CornerRadius="15,0,0,0"
                                    Padding="20,12">
                                <TextBlock Text="{Binding Tsena, StringFormat='{}{0:N0} ₽'}"
                                         FontSize="22"
                                         FontWeight="Bold"
                                         Foreground="#FF3366"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Информация о товаре -->
                    <StackPanel Grid.Row="1" 
                              Margin="25,20">
                        <TextBlock Text="{Binding Nazvanie}"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="#1a1b1f"
                                 TextWrapping="Wrap"
                                 LineHeight="24"
                                 Margin="0,0,0,12"/>

                        <Border Background="#f0f2f5" 
                                CornerRadius="8" 
                                Padding="12,6"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏷️" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Kategoria}"
                                         FontSize="14"
                                         Foreground="#656d78"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="{Binding Opisanie}"
                                 FontSize="14"
                                 Foreground="#656d78"
                                 TextWrapping="Wrap"
                                 LineHeight="20"
                                 MaxHeight="60"
                                 TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Количество на складе -->
                    <Border Grid.Row="2" 
                            Margin="25,0,25,20"
                            Background="#f8f9fa"
                            CornerRadius="12"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="В наличии:"
                                         Foreground="#656d78"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                                     HorizontalAlignment="Right">
                                <Run Text="{Binding KolichestvoTovarov}"
                                     FontWeight="Bold"
                                     FontSize="16"
                                     Foreground="#FF3366"/>
                                <Run Text=" шт."
                                     Foreground="#656d78"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Кнопка добавления в корзину -->
                    <Button Grid.Row="3"
                            Content="Добавить в корзину"
                            Style="{StaticResource ProductButtonStyle}"
                            Height="50"
                            Margin="25,0,25,25"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Click="AddToCart_Click"/>
                </Grid>
            </Border>
        </DataTemplate>

        <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <ScrollContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
    </Window.Resources>

    <!-- Основное содержимое -->
    <Border Background="White" 
            CornerRadius="20" 
            Margin="10"
            x:Name="mainBorder"
            Opacity="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Grid Grid.Row="0" Background="{StaticResource HeaderGradient}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" 
                          Orientation="Horizontal"
                          Margin="20,0">
                    <TextBlock Text="Tech Store"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Поиск -->
                <Border Grid.Column="1"
                        Background="#1AFFFFFF"
                        CornerRadius="25"
                        Margin="20,15"
                        Padding="15,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🔍"
                                 FontSize="20"
                                 Foreground="White"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <TextBox x:Name="SearchBox"
                                Grid.Column="1"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="16"
                                VerticalAlignment="Center"
                                TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>

                <!-- Корзина -->
                <Button Grid.Column="3"
                        Width="50"
                        Height="50"
                        Margin="10,0"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="CartButton_Click">
                    <Grid>
                        <TextBlock Text="🛒"
                                 FontSize="24"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        <Border x:Name="CartItemsCountBorder"
                                Background="#FF3366"
                                CornerRadius="10"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-8,-8,0">
                            <TextBlock Text="{Binding CartItemsCount}"
                                     Foreground="White"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Button>

                <!-- Профиль -->
                <Button Grid.Column="4"
                        Width="50"
                        Height="50"
                        Margin="10,0"
                        Style="{StaticResource ProductButtonStyle}"
                        Click="ProfileImage_Click">
                    <TextBlock Text="👤"
                             FontSize="24"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>

                <!-- Кнопки управления окном -->
                <StackPanel Grid.Column="5" 
                          Orientation="Horizontal"
                          Margin="10,0,20,0">
                    <Button Style="{StaticResource ProductButtonStyle}"
                            Content="—"
                            Width="30"
                            Height="30"
                            Margin="0,0,5,0"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource ProductButtonStyle}"
                            Content="☐"
                            Width="30"
                            Height="30"
                            Margin="0,0,5,0"
                            Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource ProductButtonStyle}"
                            Content="✕"
                            Width="30"
                            Height="30"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Основной контент -->
            <ScrollViewer Style="{StaticResource ScrollViewerStyle}" Grid.Row="1" 
                         Margin="20"
                         VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ProductsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <StaticResource ResourceKey="ProductCardTemplate"/>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="mainBorder"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <CircleEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>

